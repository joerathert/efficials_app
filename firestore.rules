rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to schedules for authenticated users
    match /schedules/{document} {
      allow read, write: if true; // For development/testing - replace with proper auth later
    }
    
    // Allow read/write access to games for authenticated users
    match /games/{document} {
      allow read, write: if true; // For development/testing - replace with proper auth later
    }
    
    // Allow read/write access to users for authenticated users
    match /users/{document} {
      allow read, write: if true; // For development/testing - replace with proper auth later
    }
    
    // Allow read/write access to officials for authenticated users
    match /officials/{document} {
      allow read, write: if true; // For development/testing - replace with proper auth later
    }
    
    // Allow read/write access to official_lists
    match /official_lists/{document} {
      allow read, write: if true; // For development/testing - replace with proper auth later
    }
    
    // Allow read/write access to locations
    match /locations/{document} {
      allow read, write: if true; // For development/testing - replace with proper auth later
    }
    
    // Deny all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}